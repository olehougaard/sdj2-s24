<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="dk.via.mvvm.view.CreateAccountViewController"
      prefHeight="300.0"
      prefWidth="260.0"
      userData="Create User">
    <HBox spacing="10.0">
        <TextField fx:id="username" onAction="#submitUsername"/>
        <Label>User name</Label>
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </VBox.margin>
    </HBox>
    <HBox spacing="10.0">
        <TextField fx:id="password" onAction="#submitPassword"/>
        <Label>Password</Label>
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </VBox.margin>
    </HBox>
    <HBox spacing="10.0">
        <TextField fx:id="email" onAction="#submitEmail"/>
        <Label>Email</Label>
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </VBox.margin>
    </HBox>
    <Label fx:id="errorLabel" textFill="RED">
        <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Label>
    <HBox spacing="10.0">
        <Button text="Create" onAction="#createButtonPressed"/>
        <Button text="Cancel" onAction="#cancelButtonPressed"/>
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </VBox.margin>
    </HBox>
</VBox>
